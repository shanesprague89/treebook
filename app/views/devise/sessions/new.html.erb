<div class="container">
  <div class="row"></div>
    <div class="col-xs-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                        html: {class: "well"}) do |f| %>
        <fieldset>
          <legend>Sign In:</legend>
          <div class="form-input"><%= f.input :email %></div>
          <div class="form-input"><%= f.input :password %></div>
          <div class="form-input"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
          <div><%= f.button :submit, "Sign in" %></div>
        </fieldset>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
    <div class="col-lg-2">
      <h2>Signing in is easy and secure</h2>
    </div>
  </div>
</div>